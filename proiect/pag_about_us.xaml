<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proiect.pag_about_us"
             Title="pag_about_us"
             BackgroundColor="#F9FEF7">
    <VerticalStackLayout>
        <Label 
            Text="Despre noi"
            FontSize="27"
            Margin="20"
            TextColor="#497FE3"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
             Text="Vrei sa afli mai multe? Pune o intrebare!"
             FontSize="20"
             Margin="20"
             TextColor="#497FE3"
             VerticalOptions="Center" 
             HorizontalOptions="Center" />
        <Image
            Source="about_us_icon.png"
            HeightRequest="300"
            WidthRequest="300"/>
    </VerticalStackLayout>
</ContentPage>